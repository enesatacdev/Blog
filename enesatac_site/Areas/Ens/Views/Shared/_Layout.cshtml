<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
    <title>@ViewBag.Title | enesatac.com</title>
    @using NonFactors.Mvc.Grid
    @Scripts.Render("~/bundles/ckeditor")
    @Scripts.Render("~/bundles/ckfinder")

    <link rel="icon" href="~/Areas/Ens/Content/images/favicon.png" type="image/png">

    <link href="~/Areas/Ens/Content/plugins/vectormap/jquery-jvectormap-2.0.2.css" rel="stylesheet">
    <link href="~/Areas/Ens/Content/plugins/fancy-file-uploader/fancy_fileupload.css" rel="stylesheet" />
    <link href="~/Areas/Ens/Content/plugins/Drag-And-Drop/dist/imageuploadify.min.css" rel="stylesheet" />
    <link href="~/Areas/Ens/Content/plugins/input-tags/css/tagsinput.css" rel="stylesheet" />
    <link href="~/Areas/Ens/Content/plugins/simplebar/css/simplebar.css" rel="stylesheet">
    <link href="~/Areas/Ens/Content/plugins/perfect-scrollbar/css/perfect-scrollbar.css" rel="stylesheet">
    <link href="~/Areas/Ens/Content/plugins/metismenu/css/metisMenu.min.css" rel="stylesheet">
    <link href="~/Areas/Ens/Content/MvcGrid/mvc-grid.css" rel="stylesheet" />
    <link href="~/Areas/Ens/Content/css/pace.min.css" rel="stylesheet">
    <script src="~/Areas/Ens/Scripts/js/pace.min.js"></script>

    <link rel="stylesheet" href="~/Areas/Ens/Content/css/bootstrap.min.css">

    <link rel="stylesheet" href="~/Areas/Ens/Content/css/icons.css">

    <link rel="stylesheet" href="~/Areas/Ens/Content/css/app.css">

</head>

<body class="bg-theme bg-theme4">

    <div class="wrapper">

        <div class="sidebar-wrapper" data-simplebar="true">
            <div class="sidebar-header">
                <div class="">
                    <img src="~/Areas/Ens/Content/images/logobeyazkucuk.png" class="logo-icon-2" alt="">
                </div>
                <div>
                    <h4 class="logo-text">enesatac.com</h4>
                </div>
                <a href="javascript:;" class="toggle-btn ml-auto">
                    <i class="bx bx-menu"></i>
                </a>
            </div>

            <ul class="metismenu" id="menu">

                <li>
                    <a href="#">
                        <div class="parent-icon">
                            <i class="bx bx-archive"></i>
                        </div>
                        <div class="menu-title">İstatistikler</div>
                    </a>
                </li>
                <li>
                    <a class="has-arrow" href="javascript:;">
                        <div class="parent-icon">
                            <i class="bx bx-merge"></i>
                        </div>
                        <div class="menu-title">Kategori Ayarları</div>
                    </a>
                    <ul>
                        <li>
                            <a href="#"><i class="bx bx-right-arrow-alt"></i>Kategori Listesi</a>
                            <a href="#"><i class="bx bx-right-arrow-alt"></i>Kategori Ekle</a>
                            <a href="#"><i class="bx bx-right-arrow-alt"></i>Kategori Sıralaması</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a class="has-arrow" href="javascript:;">
                        <div class="parent-icon">
                            <i class="bx bx-task"></i>
                        </div>
                        <div class="menu-title">Makale Ayarları</div>
                    </a>
                    <ul>
                        <li>
                            <a href="#"><i class="bx bx-right-arrow-alt"></i>Makale Listesi</a>
                            <a href="#"><i class="bx bx-right-arrow-alt"></i>Makale Ekle</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a class="has-arrow" href="javascript:;">
                        <div class="parent-icon">
                            <i class="bx bx-conversation"></i>
                        </div>
                        <div class="menu-title">Yorumlar</div>
                    </a>
                    <ul>
                        <li>
                            <a href="#"><i class="bx bx-right-arrow-alt"></i>Yorum Listesi</a>
                            <a href="#"><i class="bx bx-right-arrow-alt"></i>Yeni Yorumlar</a>
                        </li>
                    </ul>
                </li>

                <li>
                    <a href="#">
                        <div class="parent-icon">
                            <i class="bx bx-group"></i>
                        </div>
                        <div class="menu-title">Kullanıcı Listesi</div>
                    </a>
                </li>



                <li>
                    <a class="has-arrow" href="javascript:;">
                        <div class="parent-icon">
                            <i class="bx bx-folder"></i>
                        </div>
                        <div class="menu-title">Site Ayarları</div>
                    </a>
                    <ul>
                        <li>
                            <a href="#"><i class="bx bx-right-arrow-alt"></i>Etiketler</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a class="has-arrow" href="javascript:;">
                        <div class="parent-icon">
                            <i class="bx bx-home"></i>
                        </div>
                        <div class="menu-title">Anasayfa Ayarları</div>
                    </a>
                    <ul>
                        <li>
                            <a href="#"><i class="bx bx-right-arrow-alt"></i>Slider Ayarları</a>
                            <a href="#"><i class="bx bx-right-arrow-alt"></i>Makale Ekle</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a href="#">
                        <div class="parent-icon">
                            <i class="bx bx-file"></i>
                        </div>
                        <div class="menu-title">Log Kayıtları</div>
                    </a>
                </li>

            </ul>
        </div>

        <header class="top-header">
            <nav class="navbar navbar-expand">
                <div class="left-topbar d-flex align-items-center">
                    <a href="javascript:;" class="toggle-btn">
                        <i class="bx bx-menu"></i>
                    </a>
                </div>
                <div class="flex-grow-1 search-bar">
                    <div class="col-md-12">
                        <p class="header-text">enesatac.com | Admin Paneli</p>
                    </div>
                </div>
                <div class="right-topbar ml-auto">
                    <ul class="navbar-nav">
                        <li class="nav-item search-btn-mobile">
                            <a class="nav-link position-relative" href="javascript:;">
                                <i class="bx bx-search vertical-align-middle"></i>
                            </a>
                        </li>
                        <li class="nav-item dropdown dropdown-user-profile">
                            <a class="nav-link dropdown-toggle dropdown-toggle-nocaret" href="javascript:;" data-toggle="dropdown">
                                <div class="media user-box align-items-center">
                                    <div class="media-body user-info">
                                        <p class="user-name mb-0">Enes Ataç</p>
                                        <p class="designattion mb-0">Admin</p>
                                    </div>
                                    <img src="~/Areas/Ens/Content/images/avatars/pp.png" class="user-img" alt="user avatar">
                                </div>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right">
                                <a class="dropdown-item" href="javascript:;"><i class="bx bx-user"></i><span>Profil Ayarları</span></a>
                                <div class="dropdown-divider mb-0"></div>	<a class="dropdown-item" href="javascript:;"><i class="bx bx-power-off"></i><span>Çıkış Yap</span></a>
                            </div>
                        </li>

                    </ul>
                </div>
            </nav>
        </header>


        @RenderBody()

        <div class="overlay toggle-btn-mobile"></div>
        <a href="javaScript:;" class="back-to-top"><i class="bx bxs-up-arrow-alt"></i></a>

    </div>

    <script src="~/Areas/Ens/Scripts/js/jquery.min.js"></script>
    <script src="~/Areas/Ens/Scripts/js/popper.min.js"></script>
    <script src="~/Areas/Ens/Scripts/js/bootstrap.min.js"></script>
    <script src="~/Areas/Ens/Content/plugins/simplebar/js/simplebar.min.js"></script>
    <script src="~/Areas/Ens/Content/plugins/metismenu/js/metisMenu.min.js"></script>
    <script src="~/Areas/Ens/Content/plugins/input-tags/js/tagsinput.js"></script>
    <script src="~/Areas/Ens/Content/plugins/fancy-file-uploader/jquery.fileupload.js"></script>
    <script src="~/Areas/Ens/Content/plugins/perfect-scrollbar/js/perfect-scrollbar.js"></script>
    <script src="~/Areas/Ens/Content/plugins/vectormap/jquery-jvectormap-2.0.2.min.js"></script>
    <script src="~/Areas/Ens/Content/plugins/vectormap/jquery-jvectormap-world-mill-en.js"></script>
    <script src="~/Areas/Ens/Content/plugins/vectormap/jquery-jvectormap-in-mill.js"></script>
    <script src="~/Areas/Ens/Content/plugins/vectormap/jquery-jvectormap-us-aea-en.js"></script>
    <script src="~/Areas/Ens/Content/plugins/vectormap/jquery-jvectormap-uk-mill-en.js"></script>
    <script src="~/Areas/Ens/Content/plugins/vectormap/jquery-jvectormap-au-mill.js"></script>
    <script src="~/Areas/Ens/Content/plugins/apexcharts-bundle/js/apexcharts.min.js"></script>
    <script src="~/Areas/Ens/Scripts/MvcGrid/mvc-grid.js"></script>
    <script src="~/Areas/Ens/Scripts/js/index2.js"></script>
    <script src="~/Areas/Ens/Scripts/js/app.js"></script>
    <script>
        $('#fancy-file-upload').FancyFileUpload({
            params: {
                action: 'fileuploader'
            },
            maxfilesize: 1000000
        });
    </script>
    <script>
        $(document).ready(function () {
            $('#image-uploadify').imageuploadify();
        })
    </script>
    <script>
        [].forEach.call(document.getElementsByClassName('mvc-grid'), function (element) {
            new MvcGrid(element);
        });
    </script>

</body>
</html>