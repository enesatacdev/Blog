@model enesatac_site.Models.Categorys

@{
    ViewBag.Title = "Yeni Kategori";
    Layout = "~/Areas/Ens/Views/Shared/_Layout.cshtml";
}


<div class="page-wrapper">

    <div class="page-content-wrapper">
        <div class="page-content">

            <div class="page-breadcrumb d-none d-md-flex align-items-center mb-3">
                <div class="breadcrumb-title pr-3">Kategori Ekleme</div>
                <div class="pl-3">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 p-0">
                            <li class="breadcrumb-item">
                                <a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">Kategori Ekle</li>
                        </ol>
                    </nav>
                </div>
            </div>

            <div class="col-12 col-lg-12">
                <div class="card radius-15 border-lg-top-white">
                    <div class="card-body p-5">
                        <div class="card-title d-flex align-items-center">
                            <div>
                                <i class="bx bxs-user mr-1 font-24 text-white"></i>
                            </div>
                            <h4 class="mb-0 text-white">Kategori Ekle</h4>
                        </div>
                        <hr>
                        <div class="form-body">
                            @using (Html.BeginForm("NewCategory", "Category", FormMethod.Post))
                            {
                                <div class="form-row">
                                    <div class="form-group col-md-12">
                                        <label>Kategori Adı</label>
                                        @Html.TextBoxFor(m => m.Category_Name, new { @class = "form-control radius-30" })
                                        @Html.ValidationMessageFor(m => m.Category_Name, "", new { @style = "color:red" })
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-light px-5 radius-30 mt-3 alert alert-success">Kategori Ekle</button>
                            }

                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>

</div>
